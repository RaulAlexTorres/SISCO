<div class="row">
    <div class="col-md-12">
        <div id="accordion2" class="card-expansion">
            <div class="card card-expansion-item expanded">
                <div class="card-header border-0" id="headingOne2">
                    <button class="btn btn-reset d-flex justify-content-between w-100"
                            data-toggle="collapse" data-target="#registroMenu"
                            aria-expanded="true" aria-controls="registroMenu">
                        <span>Registro de menu</span>
                        <span class="collapse-indicator"><i class="fa fa-fw fa-chevron-down"></i></span>
                    </button>
                </div>
                <div id="registroMenu" class="collapse show"
                     aria-labelledby="headingOne2" data-parent="#accordion2">
                    <div class="card-body pt-0">
                        <form id="form-menu">
                            <div class="form-layout form-layout-2">
                                <div class="row no-gutters">
                                    <div class="col-md-4 mg-t--1 mg-md-t-0">
                                        <div class="form-group mg-md-l--1">
                                            <label class="form-control-label">
                                                Fecha:
                                                <span class="badge badge-danger"><em>Requerido</em></span>
                                            </label>
                                            <input class="form-control-br" type="text"
                                                   id="inputFecha" name="inputFecha"
                                                   data-toggle="flatpickr" placeholder="Elige una fecha">
                                        </div>
                                    </div>
                                    <div class="col-md-4 mg-t--1 mg-md-t-0">
                                        <div class="form-group mg-md-l--1">
                                            <label class="form-control-label">
                                                Fruta:
                                                <span class="badge badge-danger"><em>Requerido</em></span>
                                            </label>
                                            <select id="selectFruta" name="selectFruta"
                                                    class="form-control-br"
                                                    data-placeholder="Elige un tipo">
                                                <option label="Elige un tipo de usuario" selected></option>
                                                <option value="01">Naranja</option>
                                                <option value="02">Manzana</option>
                                                <option value="03">Jicama</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mg-t--1 mg-md-t-0">
                                        <div class="form-group mg-md-l--1">
                                            <label class="form-control-label">
                                                Postre:
                                                <span class="badge badge-secondary"><em>Opcional</em></span>
                                            </label>
                                            <select id="selectPostre" name="selectPostre"
                                                    class="form-control-br"
                                                    data-placeholder="Elige un tipo">
                                                <option label="Elige un tipo de usuario" selected></option>
                                                <option value="01">Flan napolitano</option>
                                                <option value="02">Helado</option>
                                                <option value="03">Pastel</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row no-gutters">
                                    <div class="col-md-4 mg-t--1">
                                        <div class="form-group mg-md-l--1">
                                            <label class="form-control-label">
                                                Menu de barra:
                                                <span class="badge badge-danger"><em>Requerido</em></span>
                                            </label>
                                            <select id="selectMBarra" name="selectMBarra"
                                                    class="form-control-br"
                                                    data-placeholder="Elige un tipo">
                                                <option label="Elige un platillo" selected></option>
                                                <option value="01">Mole poblano</option>
                                                <option value="02">Pechuga asada</option>
                                                <option value="03">Discada</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mg-t--1">
                                        <div class="form-group mg-md-l--1">
                                            <label class="form-control-label">
                                                Menu de oficina:
                                                <span class="badge badge-danger"><em>Requerido</em></span>
                                            </label>
                                            <select id="selectMOficina" name="selectMOficina"
                                                    class="form-control-br"
                                                    data-placeholder="Elige un tipo">
                                                <option label="Elige un platillo" selected></option>
                                                <option value="01">Mole poblano</option>
                                                <option value="02">Pechuga asada</option>
                                                <option value="03">Discada</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mg-t--1">
                                        <div class="form-group mg-md-l--1">
                                            <label class="form-control-label">
                                                Menu especial:
                                                <span class="badge badge-danger"><em>Requerido</em></span>
                                            </label>
                                            <select id="selectMEspecial" name="selectMEspecial"
                                                    class="form-control-br"
                                                    data-placeholder="Elige un tipo">
                                                <option label="Elige un platillo" selected></option>
                                                <option value="USA">Mole poblano</option>
                                                <option value="UK">Pechuga asada</option>
                                                <option value="China">Discada</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-layout-footer mg-md-l--1 bd pd-20 bd-t-0">
                                    <button id="btnGuardar" class="btn btn-raised btn-wave bg-green">
                                        <i class="fas fa-plus"></i>&nbsp; Guardar
                                    </button>
                                    <button id="btnActualizar" class="btn btn-raised btn-wave blue-grey">Actualizar</button>
                                    <button id="btnCancelar" class="btn btn-raised bg-gray">Cancelar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div><!-- /.card -->
        </div><!-- /#accordion2 -->
    </div>
</div>

<div class="row">
